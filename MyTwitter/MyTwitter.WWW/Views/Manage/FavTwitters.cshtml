@model System.Collections.Generic.IEnumerable<MyTwitter.WWW.Models.MyTwitterModels.TwitterUserViewModel>

@{
	ViewData["Title"] = "FavTwitters";
}

<h2>FavTwitters</h2>


<p>
	@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Tweets)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Following)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Followers)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Likes)
		</th>
	</tr>

	@foreach (var item in Model)
	{
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Tweets)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Following)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Followers)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Likes)
		</td>
		<td>
			@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
			@Html.ActionLink("Details", "Details", new { id = item.Id }) |
			@Html.ActionLink("Delete", "Delete", new { id = item.Id })
		</td>
	</tr>
	}

</table>